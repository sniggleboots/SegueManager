<Window x:Class="SegueManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SegueManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="607" Width="809">
    <Grid Background="#FF969696">
        <ListBox x:Name="lstAllSegues" HorizontalAlignment="Left" Height="524" Margin="10,35,0,0" VerticalAlignment="Top" Width="452" Background="#FFAAAAAA" BorderBrush="#FF646464"/>
        <Button x:Name="btnSegment" Content="Segment" HorizontalAlignment="Left" Margin="467,10,0,0" VerticalAlignment="Top" Width="63" Background="#FFBEBEBE" BorderBrush="#FF646464" RenderTransformOrigin="0.253,0.35"/>
        <Button x:Name="btnAuthor" Content="Author" HorizontalAlignment="Left" Margin="535,10,0,0" VerticalAlignment="Top" Width="67" Background="#FFBEBEBE" BorderBrush="#FF646464"/>
        <Button x:Name="btnPatreon" Content="Patreon" HorizontalAlignment="Left" Margin="607,10,0,0" VerticalAlignment="Top" Width="53" Background="#FFBEBEBE" BorderBrush="#FF646464"/>
        <Button x:Name="btnDate" Content="Date" HorizontalAlignment="Left" Margin="665,10,0,0" VerticalAlignment="Top" Width="44" Background="#FFBEBEBE" BorderBrush="#FF646464"/>
        <Button x:Name="btnReset" Content="Reset Filter" HorizontalAlignment="Left" Margin="714,10,0,0" VerticalAlignment="Top" Width="68" Background="#FFBEBEBE" BorderBrush="#FF646464"/>
        <TextBox x:Name="txtFilter" HorizontalAlignment="Left" Height="20" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="452" Background="#FFBEBEBE" BorderBrush="#FF646464"/>
        <ListBox x:Name="lstFilterOptions" HorizontalAlignment="Left" Height="144" Margin="467,35,0,0" VerticalAlignment="Top" Width="315" Background="#FFAAAAAA" BorderBrush="#FF646464"/>
        <ListBox x:Name="lstFilteredSegues" HorizontalAlignment="Left" Height="289" Margin="467,184,0,0" VerticalAlignment="Top" Width="315" Background="#FFAAAAAA" BorderBrush="#FF646464"/>
        <Button x:Name="btnPlaySelected" Content="Play Selected" HorizontalAlignment="Left" Margin="585,539,0,0" VerticalAlignment="Top" Width="197" BorderBrush="#FF646464" Background="#FFBEBEBE"/>
        <Button x:Name="btnPlayFiltered" Content="Play Random (Filter)" HorizontalAlignment="Left" Margin="585,514,0,0" VerticalAlignment="Top" Width="197" BorderBrush="#FF646464" Background="#FFBEBEBE"/>
        <Button x:Name="btnPlayAll" Content="Play Random (All)" HorizontalAlignment="Left" Margin="585,489,0,0" VerticalAlignment="Top" Width="197" BorderBrush="#FF646464" Background="#FFBEBEBE"/>
        <Image x:Name="imgSniggle" HorizontalAlignment="Left" Height="63" Margin="479,489,0,0" VerticalAlignment="Top" Width="85" OpacityMask="#0C000000" Source="Resources/sniggleboots_190.png"/>

    </Grid>
</Window>
